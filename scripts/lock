#!/usr/bin/bash

# dependencies:
# https://github.com/mortie/swaylock-effects

B='#00000000'
C='#ffffff22'
D='#282828ff'
T='#1d2021ff'
W='#880000ff'
V='#fb4934ff'

swaylock \
  --ignore-empty-password \
  --daemonize \
  --screenshots \
  --clock \
  --indicator \
  --indicator-radius 100 \
  --indicator-thickness 7 \
  --effect-blur 7x5 \
  --key-hl-color $W \
  --inside-ver-color $C \
  --ring-ver-color $V \
  --inside-wrong-color $C \
  --ring-wrong-color $W \
  --inside-color $B \
  --ring-color $D \
  --line-color $B \
  --key-hl-color $W \
  --bs-hl-color $W \
  --separator-color $D \
  --text-ver-color $T \
  --text-wrong-color $T
